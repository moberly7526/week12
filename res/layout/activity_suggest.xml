<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:text="지금 하고 싶은 일은?"/>

            <RadioGroup
                android:id="@+id/rgroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/r1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="잠"
                    android:textSize="10dp"
                    android:checked="false" />
                <RadioButton
                    android:id="@+id/r1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="산책"/>
                <RadioButton
                    android:id="@+id/r1c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="운동"/>
                <RadioButton
                    android:id="@+id/r1d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="수다"/>
                <RadioButton
                    android:id="@+id/r1f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="쇼핑"/>
                <RadioButton
                    android:id="@+id/r1e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="데이트"/>

            </RadioGroup>


            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="먹고 싶은 음식은?" />

            <RadioGroup
                android:id="@+id/rgroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/r2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카레"
                    android:textSize="10dp"
                    android:checked="false" />
                <RadioButton
                    android:id="@+id/r2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빵"
                    android:textSize="10dp"/>
                <RadioButton
                    android:id="@+id/r2c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="샐러드"
                    android:textSize="10dp"/>
                <RadioButton
                    android:id="@+id/r2d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스파게티"
                    android:textSize="10dp"/>
                <RadioButton
                    android:id="@+id/r2e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="불닭"
                    android:textSize="10dp"/>
                <RadioButton
                    android:id="@+id/r2f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고기"
                    android:textSize="10dp"/>
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="마음에 드는 물건은?" />
            <RadioGroup
                android:id="@+id/rgroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/r3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="네잎클로버"
                    android:textSize="10dp"
                    android:checked="false" />
                <RadioButton
                    android:id="@+id/r3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="잔디"/>
                <RadioButton
                    android:id="@+id/r3c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="레몬"/>
                <RadioButton
                    android:id="@+id/r3d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="풍선"/>
                <RadioButton
                    android:id="@+id/r3e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="리본"/>
                <RadioButton
                    android:id="@+id/r3f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="폭죽"/>
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="좋아하는 영화 장르는?" />
            <RadioGroup
                android:id="@+id/rgroup4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/r4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="드라마"
                    android:checked="false" />
                <RadioButton
                    android:id="@+id/r4b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="액션"/>
                <RadioButton
                    android:id="@+id/r4c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="스릴러"/>
                <RadioButton
                    android:id="@+id/r4d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="코미디"/>
                <RadioButton
                    android:id="@+id/r4e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="멜로"/>
                <RadioButton
                    android:id="@+id/r4f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="공포"/>
            </RadioGroup>

            <TextView
