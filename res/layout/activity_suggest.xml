                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="가고 싶은 곳은?" />
            <RadioGroup
                android:id="@+id/rgroup5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/r5a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="중국"
                    android:checked="false" />
                <RadioButton
                    android:id="@+id/r5b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="스위스"/>
                <RadioButton
                    android:id="@+id/r5c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="제주도"/>
                <RadioButton
                    android:id="@+id/r5d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="지중해"/>
                <RadioButton
                    android:id="@+id/r5e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="동유럽"/>
                <RadioButton
                    android:id="@+id/r5f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="인도"/>
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아하는 음악은?"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp" />
            <RadioGroup
                android:id="@+id/rgroup6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/r6a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="클래식"
                    android:checked="false" />
                <RadioButton
                    android:id="@+id/r6b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="하우스"/>
                <RadioButton
                    android:id="@+id/r6c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="힙합"/>
                <RadioButton
                    android:id="@+id/r6d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="가요"/>
                <RadioButton
                    android:id="@+id/r6e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="발라드"/>
                <RadioButton
                    android:id="@+id/r6f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="재즈"/>
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가고 싶은 장소는?"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp" />
            <RadioGroup
                android:id="@+id/rgroup7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                        <RadioButton
                            android:id="@+id/r7a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:text="허브농원"
                            android:checked="false" />
                        <RadioButton
                            android:id="@+id/r7b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:text="대나무숲"/>
                        <RadioButton
                            android:id="@+id/r7c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:text="감귤농장"/>

                        <RadioButton
                            android:id="@+id/r7d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:text="딸기축제"/>
                        <RadioButton
                            android:id="@+id/r7e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:text="벚꽃축제"/>
                        <RadioButton
                            android:id="@+id/r7f"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:text="눈꽃축제"/>
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아하는 색은?"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp"/>
            <RadioGroup
                android:id="@+id/rgroup8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/r8a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="블루"
                    android:textColor="#a1d6ea"
                    android:checked="false" />
                <RadioButton
                    android:id="@+id/r8b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="브라운"
                    android:textColor="#a87d33"/>
                <RadioButton
                    android:id="@+id/r8c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="옐로"
                    android:textColor="#fbfd51"
                    />
                <RadioButton
                    android:id="@+id/r8d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="그린"
                    android:textColor="#51fd76"/>
                <RadioButton
                    android:id="@+id/r8e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="핑크"
                    android:textColor="#fb4fd9"/>
                <RadioButton
                    android:id="@+id/r8f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="레드"
                    android:textColor="#fb5f4f"/>
            </RadioGroup>-->

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="완료"
                android:background="@drawable/button_corner"/>
            -->
        </LinearLayout>

    </ScrollView>


</LinearLayout>

