<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="6dp" >

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_marginBottom="5dp" >
        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/obrandname" android:hint="브랜드명" />
        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text=" / " android:textSize="20dp" android:id="@+id/oslash"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oproductname" android:hint="제품명"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:gravity="center_horizontal">
        <RatingBar
            android:id="@+id/orrb" android:layout_marginTop="10dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            style="@style/customRatingBar" />
        <EditText
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/orcomment" android:hint="한줄평"
            android:layout_alignParentBottom="true" />

    </LinearLayout>
    <Button
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" android:layout_marginTop="10dp"
        android:background="@drawable/button_corner" android:text="저장하기"
        android:id="@+id/ostore"/>

</LinearLayout>
