<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_marginBottom="6dp">
        <Button
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="7dp"
            android:id="@+id/load" android:text="위시리스트에서 불러오기" android:layout_weight="1"
            android:background="@drawable/button_corner"/>
        <Button
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button_corner"
            android:id="@+id/rnew" android:text="+" android:layout_weight="4"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="시향 기록을 추가해주세요" android:textSize="30dp"
            android:layout_centerInParent="true"
            android:id="@+id/empty"/>
        <ListView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/recordlist"
            android:longClickable="true"/>
    </RelativeLayout>



</LinearLayout>
