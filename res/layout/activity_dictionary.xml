<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:layout_margin="5dp" >

    <ImageView
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_weight="1" android:layout_marginBottom="5dp"
        android:id="@+id/history" android:background="@drawable/history"/>

    <ImageView
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_weight="1" android:layout_marginBottom="5dp"
        android:id="@+id/kind" android:background="@drawable/kind">
    </ImageView>

    <ImageView
        android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
        android:id="@+id/dicnote" android:background="@drawable/dicnote">
    </ImageView>

</LinearLayout>